# ------------------------------------------------------------------------------
# SSC-SMART CAMPUS General System Settings
# ------------------------------------------------------------------------------
APP_ENV=development       # Can be 'local', 'development', 'staging', 'production'
APP_DEBUG=true            # Enable or disable debug mode (true/false)
APP_URL=http://localhost  # Base URL of the application
APP_KEY=base64:YOUR_APP_KEY   # Application encryption key (Generated by your app)
APP_TIMEZONE=Asia/Manila  
APP_LOCALE=en             

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DB_CONNECTION=mysql       	# Database driver (mysql, pgsql, sqlite, etc.)
DB_HOST=127.0.0.1         	
DB_PORT=3306              	# Database port
DB_DATABASE=queue 
DB_USERNAME=root          	
DB_PASSWORD=          	

# ------------------------------------------------------------------------------
# Mail Configuration
# ------------------------------------------------------------------------------
MAIL_MAILER=smtp          # Mail driver (smtp, sendmail, mailgun, etc.)
MAIL_HOST=smtp.mailtrap.io  # SMTP host for sending emails
MAIL_PORT=2525            # SMTP port
MAIL_USERNAME=null        # Mail account username
MAIL_PASSWORD=null        # Mail account password
MAIL_ENCRYPTION=null      # Encryption method (tls, ssl)

# ------------------------------------------------------------------------------
# Cache and Session Configuration
# ------------------------------------------------------------------------------
CACHE_DRIVER=file         # Cache driver (file, redis, database)
SESSION_DRIVER=file       # Session storage (file, cookie, database)
SESSION_LIFETIME=120      # Session lifetime in minutes

# ------------------------------------------------------------------------------
# Queue and Jobs Configuration
# ------------------------------------------------------------------------------
QUEUE_CONNECTION=sync     # Queue connection (sync, database, redis)
REDIS_HOST=127.0.0.1      # Redis host for cache and queue
REDIS_PORT=6379           # Redis port

# ------------------------------------------------------------------------------
# Logging and Error Reporting
# ------------------------------------------------------------------------------
LOG_CHANNEL=stack         # Log channel (stack, single, syslog, errorlog)
LOG_LEVEL=debug           # Log level (debug, info, warning, error)
LOG_FILE_PATH=/path/to/your/logfile.log  # Optional custom log file path

# ------------------------------------------------------------------------------
# Security and Authentication
# ------------------------------------------------------------------------------
JWT_SECRET=your-jwt-secret    # Secret key for JWT authentication
SESSION_COOKIE_NAME= 		  # Custom session cookie name
SESSION_COOKIE_SECURE=false    # Set to true if using HTTPS (production)
SESSION_COOKIE_HTTPONLY=false  # Prevent JavaScript from accessing cookies
SESSION_COOKIE_SAMESITE=Lax    # SameSite policy for CSRF protection (Lax, Strict)

# ------------------------------------------------------------------------------
# File System Configuration (for storing files and assets)
# ------------------------------------------------------------------------------
FILESYSTEM_DRIVER=local      # File system driver (local, s3, etc.)
AWS_ACCESS_KEY_ID=your-aws-key  # AWS S3 Key for storage
AWS_SECRET_ACCESS_KEY=your-aws-secret  # AWS S3 Secret key
AWS_DEFAULT_REGION=us-east-1 # AWS region
AWS_BUCKET=your-s3-bucket    # AWS S3 bucket name

# ------------------------------------------------------------------------------
# API Keys and Third-Party Service Integration
# ------------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
FACEBOOK_APP_ID=your-facebook-app-id
TWILIO_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ------------------------------------------------------------------------------
# Miscellaneous Configurations
# ------------------------------------------------------------------------------
UPLOAD_MAX_FILESIZE=2M      # Maximum file upload size
APP_VERSION=1.0.0           # Application version
ADMIN_EMAIL=admin@example.com  # Administrator email address

# ------------------------------------------------------------------------------
# Pusher/Real-Time Notifications
# ------------------------------------------------------------------------------
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_SECRET=your-pusher-app-secret

# ------------------------------------------------------------------------------
# Environment Specific Configurations
# ------------------------------------------------------------------------------
# Custom environment settings for different modes like staging/production
